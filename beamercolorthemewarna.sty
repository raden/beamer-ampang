\mode<presentation>

\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!25!red!60!blue!90!green!95}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!25!red!90!blue!90!green!95}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!25!red!40!blue!90!green!85}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!5!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\mode
<all>
